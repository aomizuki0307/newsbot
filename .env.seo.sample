# SEO profile sample for `python main.py --profile seo`

NEWSBOT_PROFILE=seo
PROMPT_VARIANT=seo

# LLM Provider: openai or anthropic
LLM_PROVIDER=openai

# OpenAI Settings
OPENAI_API_KEY=
OPENAI_MODEL=gpt-5-mini

# Anthropic Settings
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-5

# Publish Platform: wordpress | hatena | none
PUBLISH_PLATFORM=hatena

# Hatena Blog Settings (AtomPub)
HATENA_ID=
HATENA_BLOG_ID=
HATENA_API_KEY=
HATENA_CONTENT_TYPE=text/html
HATENA_FORCE_HTML=true
HATENA_CATEGORIES=SEO,ニュース
HATENA_DRAFT=false
HATENA_FORMAT_PARAGRAPHS=true
HATENA_PARAGRAPH_SENTENCES=2

# Hatena Fotolife (image upload, OAuth)
HATENA_OAUTH_CONSUMER_KEY=
HATENA_OAUTH_CONSUMER_SECRET=
HATENA_OAUTH_ACCESS_TOKEN=
HATENA_OAUTH_ACCESS_TOKEN_SECRET=
HATENA_FOTOLIFE_POST_URI=https://f.hatena.ne.jp/atom/post
HATENA_FOTOLIFE_FOLDER=Hatena Blog

# Unsplash Settings (optional - for featured images)
UNSPLASH_ACCESS_KEY=

# RSS Feeds (comma-separated)
RSS_FEEDS=https://www.nhk.or.jp/rss/news/cat0.xml,https://www.nhk.or.jp/rss/news/cat6.xml,https://rss.itmedia.co.jp/rss/2.0/news_bursts.xml

# Cache duration in hours (default: 24)
CACHE_DURATION_HOURS=24

# Optional guardrails
MAX_ARTICLES_PER_RUN=5
MAX_TOKENS_PER_RUN=10000
ALLOWLIST_PATH=config/allowlist.txt

# Prompt and logging options
JSON_LOGS=false
DRAFT_PATH=out/draft.md
