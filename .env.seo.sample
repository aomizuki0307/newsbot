# SEO profile sample for `python main.py --profile seo`

NEWSBOT_PROFILE=seo
PROMPT_VARIANT=seo

# LLM Provider: openai or anthropic
LLM_PROVIDER=openai

# OpenAI Settings
OPENAI_API_KEY=
OPENAI_MODEL=gpt-5-mini

# Anthropic Settings
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-5

# Publish Platform: wordpress | hatena | none
PUBLISH_PLATFORM=hatena

# Hatena Blog Settings (AtomPub)
HATENA_ID=
HATENA_BLOG_ID=
HATENA_API_KEY=
HATENA_CONTENT_TYPE=text/html
HATENA_FORCE_HTML=true
HATENA_STRIP_H1=true
HATENA_CATEGORIES=SEO,ニュース
HATENA_DRAFT=false
HATENA_FORMAT_PARAGRAPHS=true
HATENA_PARAGRAPH_SENTENCES=2

# Hatena Fotolife (image upload, OAuth)
HATENA_OAUTH_CONSUMER_KEY=
HATENA_OAUTH_CONSUMER_SECRET=
HATENA_OAUTH_ACCESS_TOKEN=
HATENA_OAUTH_ACCESS_TOKEN_SECRET=
HATENA_FOTOLIFE_POST_URI=https://f.hatena.ne.jp/atom/post
HATENA_FOTOLIFE_FOLDER=Hatena Blog

# Unsplash Settings (optional - for featured images)
UNSPLASH_ACCESS_KEY=

# RSS Feeds (comma-separated)
RSS_FEEDS=https://feeds.feedburner.com/blogspot/amDG,https://feeds.searchengineland.com/searchengineland,https://www.searchenginejournal.com/feed/,https://ahrefs.com/blog/feed/,https://backlinko.com/blog/feed/

# Cache duration in hours (default: 24)
CACHE_DURATION_HOURS=24

# Optional guardrails
MAX_ARTICLES_PER_RUN=5
MAX_TOKENS_PER_RUN=10000
SUMMARY_MAX_POINTS=10
ALLOWLIST_PATH=config/allowlist.txt

# Prompt and logging options
JSON_LOGS=false
DRAFT_PATH=out/draft.md

# Optional series links (used in articles if set)
SERIES_LINK_A=
SERIES_LINK_A_LABEL=
SERIES_LINK_B=
SERIES_LINK_B_LABEL=

# Optional monetization / planning inputs
REVENUE_MODEL=AdSense
FUNNEL_STAGE=情報収集
PRIMARY_QUERY=
RELATED_QUERIES=
TARGET_READER=
GOAL_ACTION=
PR_DISCLOSURE=無
FIRST_PARTY_INFO=
EXISTING_URLS=
AFFILIATE_CATEGORIES=
TITLE_HINT=
CTA_WEAK_TEXT=
CTA_WEAK_URL=
CTA_STRONG_TEXT=
CTA_STRONG_URL=
INTERNAL_LINKS=

# Optional planning / review stages
PLAN_ENABLED=true
FINAL_CHECK_ENABLED=true
FINAL_CHECK_PATH=out/final_check.md
