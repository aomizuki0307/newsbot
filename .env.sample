# LLM Provider: openai or anthropic
LLM_PROVIDER=openai

# OpenAI Settings
OPENAI_API_KEY=
OPENAI_MODEL=gpt-5-mini

# Anthropic Settings
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-5

# Publish Platform: wordpress | hatena | none
PUBLISH_PLATFORM=hatena

# WordPress Settings
WORDPRESS_URL=https://your-site.com
WORDPRESS_USERNAME=
WORDPRESS_APP_PASSWORD=

# Hatena Blog Settings (AtomPub)
HATENA_ID=
HATENA_BLOG_ID=
HATENA_API_KEY=
# Optional overrides
HATENA_ATOM_ENDPOINT=
HATENA_CONTENT_TYPE=text/html
HATENA_FORCE_HTML=true
HATENA_STRIP_H1=true
HATENA_CATEGORIES=
HATENA_DRAFT=false
HATENA_FORMAT_PARAGRAPHS=true
HATENA_PARAGRAPH_SENTENCES=2

# Hatena Fotolife (image upload, OAuth)
HATENA_OAUTH_CONSUMER_KEY=
HATENA_OAUTH_CONSUMER_SECRET=
HATENA_OAUTH_ACCESS_TOKEN=
HATENA_OAUTH_ACCESS_TOKEN_SECRET=
