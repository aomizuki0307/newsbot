HATENA_FOTOLIFE_FOLDER=Hatena Blog

# Unsplash Settings (optional - for featured images)
UNSPLASH_ACCESS_KEY=

# RSS Feeds (comma-separated)
RSS_FEEDS=

# Cache duration in hours (default: 24)
CACHE_DURATION_HOURS=24

# Optional guardrails
MAX_ARTICLES_PER_RUN=0
MAX_TOKENS_PER_RUN=0
SUMMARY_MAX_POINTS=8
ALLOWLIST_PATH=config/allowlist.txt

# Prompt and logging options
PROMPT_VARIANT=default
JSON_LOGS=false
DRAFT_PATH=out/draft.md

# Optional profile controls
NEWSBOT_PROFILE=
NEWSBOT_DOTENV_OVERRIDE=false

# Optional series links (used in articles if set)
